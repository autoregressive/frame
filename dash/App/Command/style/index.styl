.command
  // background var(--ghostA)
  height 63px
  position absolute
  top 10px
  left 6px
  right 6px
  z-index 3000000
  // border-radius 14px
  // box-shadow 0px 4px 8px var(--ghostY)

  .commandTitle
    position absolute 
    left 73px
    right 70px
    top 2px
    bottom 0
    display flex
    justify-content center
    align-items center
    text-transform uppercase
    letter-spacing 2px
    font-weight 500
    font-size 10px

  .commandItem
    height 32px
    width 48px
    top 12px
    border-radius 12px
    display flex
    justify-content center
    align-items center
    -webkit-app-region no-drag
    transition none
    pointer-events auto
    transform translate3d(0, 0, 0)
    background var(--ghostB)
    position absolute
    // box-shadow 0px 18px 12px var(--ghostZ)
    cursor pointer
    border 3px solid var(--ghostZ)


    *
      pointer-events none

  .commandItem:hover
    background var(--ghostC)

  .commandItemBack
    left 14px

  .commandItemClose
    right 14px

.commandBack
  padding 20px
  cursor pointer
  position absolute
  top 0
  left 0
  bottom 0
  width 64px

.commandClose
  padding 20px
  cursor pointer
  position absolute
  top 0
  right 0
  bottom 0
  width 64px
  background blue



